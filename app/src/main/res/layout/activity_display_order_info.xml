<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayOrderInfo">

    <ListView
        android:id="@+id/orderItemList"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textViewOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        android:textColor="#4B0082"
        android:layout_below="@id/orderItemList"/>

    <Button
        android:id="@+id/buttonToAddCalendar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="520dp"
        android:background="@color/purple_500"
        android:text="Add to calender"
        android:textColor="@color/white"
        android:onClick="addCalender" />

</RelativeLayout>