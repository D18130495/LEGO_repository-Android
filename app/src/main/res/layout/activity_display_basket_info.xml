<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayBasketInfo">

    <ImageView
        android:id="@+id/displayBasketImage"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:id="@+id/displayBasketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="120dp"
        android:textSize="16dp"
        android:textColor="#1E90FF"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displayBasketNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:textColor="#4B0082"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displayBasketPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="240dp"
        android:textSize="20dp"
        android:textColor="#1E90FF"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displayBasketQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:textSize="30dp"
        android:textColor="#1E90FF"
        android:layout_row="0"
        android:layout_column="1" />


    <ImageView
        android:id="@+id/addButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/add"
        android:onClick="addBasket"
        android:focusable="false" />

    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/remove"
        android:onClick="removeBasket"
        android:focusable="false" />

</RelativeLayout>

