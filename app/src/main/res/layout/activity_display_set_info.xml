<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplaySetInfo">

    <ImageView
        android:id="@+id/displaySetImage"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:id="@+id/displaySetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="80dp"
        android:textSize="16dp"
        android:textColor="#1E90FF"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displaySetNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="160dp"
        android:textSize="20dp"
        android:textColor="#4B0082"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displaySetPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:textColor="#1E90FF"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:id="@+id/displaySetDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        android:textColor="#4B0082"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="520dp"
        android:background="@color/purple_500"
        android:text="Add to basket"
        android:onClick="updateBasket" />

</RelativeLayout>